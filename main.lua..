--[[ üêç BLACKMAMBA PRO V58 | KEY SYSTEM ENGINE ]]
local P = game:GetService("Players").LocalPlayer

-- [[ CONFIGURATION ]]
local Settings = {
    Key = "MAMBA-777",
    Discord = "https://discord.gg/xfdkm787E",
    Version = "V58"
}

-- [[ UI KEY SYSTEM ]]
local function ShowKeySystem()
    local G = Instance.new("ScreenGui", P.PlayerGui)
    G.Name = "MambaKeySystem"
    G.ResetOnSpawn = false
    
    local M = Instance.new("Frame", G)
    M.Size = UDim2.new(0, 320, 0, 180)
    M.Position = UDim2.new(0.5, -160, 0.5, -90)
    M.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
    M.BorderSizePixel = 0
    M.Active = true
    M.Draggable = true
    Instance.new("UICorner", M)
    
    -- STROKE/BORDER
    local Stroke = Instance.new("UIStroke", M)
    Stroke.Color = Color3.fromRGB(200, 0, 0)
    Stroke.Thickness = 2

    local T = Instance.new("TextLabel", M)
    T.Size = UDim2.new(1, 0, 0, 45)
    T.Text = "üêç BLACKMAMBA HUB | " .. Settings.Version
    T.TextColor3 = Color3.new(1, 1, 1)
    T.BackgroundTransparency = 1
    T.Font = Enum.Font.SourceSansBold
    T.TextSize = 18
    
    local I = Instance.new("TextBox", M)
    I.Size = UDim2.new(0.85, 0, 0, 35)
    I.Position = UDim2.new(0.075, 0, 0.35, 0)
    I.PlaceholderText = "Paste Key Here..."
    I.Text = ""
    I.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    I.TextColor3 = Color3.new(1, 1, 1)
    Instance.new("UICorner", I)
    
    -- CHECK KEY BUTTON
    local B = Instance.new("TextButton", M)
    B.Size = UDim2.new(0.4, 0, 0, 35)
    B.Position = UDim2.new(0.075, 0, 0.65, 0)
    B.Text = "Verify Key"
    B.BackgroundColor3 = Color3.fromRGB(0, 120, 0)
    B.TextColor3 = Color3.new(1, 1, 1)
    B.Font = Enum.Font.SourceSansBold
    Instance.new("UICorner", B)
    
    -- GET KEY BUTTON (DISCORD)
    local D = Instance.new("TextButton", M)
    D.Size = UDim2.new(0.4, 0, 0, 35)
    D.Position = UDim2.new(0.525, 0, 0.65, 0)
    D.Text = "Get Key in Discord"
    D.BackgroundColor3 = Color3.fromRGB(88, 101, 242) -- Discord Blurple Color
    D.TextColor3 = Color3.new(1, 1, 1)
    D.Font = Enum.Font.SourceSansBold
    Instance.new("UICorner", D)

    -- [[ LOGIC ]]
    
    -- GET KEY / DISCORD ACTION
    D.MouseButton1Click:Connect(function()
        setclipboard(Settings.Discord)
        D.Text = "Link Copied!"
        task.wait(2)
        D.Text = "Get Key in Discord"
        game:GetService("StarterGui"):SetCore("SendNotification", {
            Title = "Mamba Hub",
            Text = "Discord link copied to clipboard! Paste it in your browser.",
            Duration = 5
        })
    end)

    -- VERIFY ACTION
    B.MouseButton1Click:Connect(function()
        if I.Text == Settings.Key then
            B.Text = "SUCCESS!"
            B.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
            task.wait(1)
            G:Destroy()
            -- EXECUTE MAIN SCRIPT FROM GITHUB
            loadstring(game:HttpGet("https://raw.githubusercontent.com/danielramo027143883-stack/BlackMambaHub/refs/heads/main/main.lua.."))()
        else
            I.Text = ""
            I.PlaceholderText = "INVALID KEY!"
            I.PlaceholderColor3 = Color3.new(1, 0, 0)
            task.wait(2)
            I.PlaceholderText = "Paste Key Here..."
            I.PlaceholderColor3 = Color3.fromRGB(178, 178, 178)
        end
    end)
end

-- START LOADER
ShowKeySystem()
